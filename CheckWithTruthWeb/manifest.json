{
  "manifest_version": 2 ,
  "name": "FakeNews",
  "version": "1.0",

  "description": "An extension to find if the new is real or fake",

  "browser_action": {
    "default_title": "RealOrFake",
    "default_icon": "icon.png",
    "default_popup": "ROFdemo.html"
  },
  "background": {
    "scripts": ["Background.js"]
  },
  "permissions": [
    "tabs",
    "http://localhost/*/*",
    "http://*/*",
    "notifications",
    "activeTab"

  ]
}